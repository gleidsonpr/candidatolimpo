@model IEnumerable<candidatolimpo.Models.Vereador>

@{
    ViewBag.Title = "Index";
}

<h2>COMPARAR VEREADORES DE SUA CIDADE</h2>
@using (Html.BeginForm("Index", "Vereadors", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Você está na página de consulta vereadores</h4>
    </div>
    <div class="row">
        <div class="col-md-8">
            Selecione a UF:

            @{var listItems = candidatolimpo.Models.DropDownList.Uf.ListaUfs();
            }
            @Html.DropDownList("uf", new SelectList(listItems, "UfId", "Nome", "Nome"))
            Digite a cidade: @Html.TextBox("cidade")
            <br /><br />
            <fieldset> <legend>Digite um critério abaixo ou os 3 juntos, não use busca por 2 critérios</legend>
                Digite a escolaridade: @Html.TextBox("escolaridade")
            <br/><br />
                Digite o sexo: @Html.TextBox("sexo")
            <br/><br />
                Digite o partido: @Html.TextBox("partido")
            </fieldset>
            <input type="submit" value="Consultar" class="btn btn-success" />
        </div>
    </div>
}


<table class="table">
    <tr>
        <th>
            <label>Nome</label>
        </th>
        <th>
            <label>Número</label>
        </th>
        
        <th>
            <label>Situação</label>
        </th>
        <th>
            <label>Partido</label>
        </th>
        <th>
            <label>Ocupação</label>
        </th>
        <th>
            <label>Idade</label>
        </th>
        <th>
            <label>Sexo</label>
        </th>
        <th>
            <label>Escolaridade</label>
        </th>
        <th>
            <label>Estado civil</label>
        </th>
        <th>
            <label>Cor</label>
        </th>
        <th>
            <label>Nacionalidade</label>
        </th>
        <th>
            <label>Despesa máxima</label>
        </th>
        <th>
            <label>Situação</label>
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome_canditado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_candidato)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Des_situacao_candidatura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla_partido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao_ocupacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade_data_eleicao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao_sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao_grau_instrucao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao_estado_civil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao_cor_raca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao_nacionalidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Despesa_max_campanha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc_sit_tot_turno)
        </td>
        

    </tr>
}

</table>
